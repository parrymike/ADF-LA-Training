{
	"name": "Users_HTTP_to_ABS_JSON_by_page",
	"properties": {
		"description": "Copy users data to blob storage by page",
		"activities": [
			{
				"name": "Copy Users from HTTP to ADS",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [
					{
						"name": "Source",
						"value": "users?_page=@{pipeline().parameters.page}&_limit=@{pipeline().parameters.limit}"
					},
					{
						"name": "Destination",
						"value": "json//users.json"
					}
				],
				"typeProperties": {
					"source": {
						"type": "RestSource",
						"httpRequestTimeout": "00:01:40",
						"requestInterval": "00.00:00:00.010",
						"requestMethod": "GET"
					},
					"sink": {
						"type": "JsonSink",
						"storeSettings": {
							"type": "AzureBlobStorageWriteSettings",
							"copyBehavior": "MergeFiles"
						},
						"formatSettings": {
							"type": "JsonWriteSettings",
							"filePattern": "arrayOfObjects"
						}
					},
					"enableStaging": false,
					"dataIntegrationUnits": 2
				},
				"inputs": [
					{
						"referenceName": "DS_REST_jsonplaceholder_Users",
						"type": "DatasetReference",
						"parameters": {
							"page": {
								"value": "@pipeline().parameters.page",
								"type": "Expression"
							},
							"limit": {
								"value": "@pipeline().parameters.limit",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "DS_JSON_jsonplaceholder_Users",
						"type": "DatasetReference"
					}
				]
			}
		],
		"concurrency": 1,
		"parameters": {
			"page": {
				"type": "Int",
				"defaultValue": 1
			},
			"limit": {
				"type": "Int",
				"defaultValue": 2
			}
		},
		"annotations": []
	}
}